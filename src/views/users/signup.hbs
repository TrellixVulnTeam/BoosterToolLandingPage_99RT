<div class="bg-dark signup-page vh-100">
    <div class="bg-dark signup-form rounded">
        <form action="/users/signup" method="POST">
            <legend class="legend-signup">Create a new account</legend>
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Name here..." name="name">
                    <label for="floatingInput">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
                    <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="confirm_password">
                    <label for="floatingPassword">Confirm Password</label>
                </div>
                <p><small>Already have an account? <a href="/users/signin" class="atag">Login here</a></small></p>
            </div>
            <button class="btn btn-primary rounded-pill">Create</button>
    </div>
    </form>
</div>
</div>